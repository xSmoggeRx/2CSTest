<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TwoCodersThirdColor"
    android:orientation="vertical"
    tools:context=".Views.DetailsActivity">

    <ImageView
        android:id="@+id/detailsImage"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:adjustViewBounds="true"
        android:background="@color/black"
        android:contentDescription="@string/poster_movie" />

    <TextView
        android:id="@+id/titleMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/TwoCodersMainColor"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="TextView"
        android:layout_margin="12dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/overviewMovie"
        android:layout_margin="12dp"
        android:textSize="18sp"
        android:textColor="@color/TwoCodersSecondaryColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>